@model AE_VillaProject_2021.Models.EntityFramework.Products

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

@{
    List<string> propertiesList = new List<string>();

    if (Model.ProductProperties.Barbecue== true)
    {
        propertiesList.Add("Barbekü");
    }
    if (Model.ProductProperties.Tv == true)
    {
        propertiesList.Add("Tv");
    }
    if (Model.ProductProperties.Wifi == true)
    {
        propertiesList.Add("Wifi");
    }
    if (Model.ProductProperties.Klima == true)
    {
        propertiesList.Add("Klima");
    }
    if (Model.ProductProperties.Sauna == true)
    {
        propertiesList.Add("Sauna");
    }
    if (Model.ProductProperties.Fridge == true)
    {
        propertiesList.Add("Buzdolabı");
    }
    if (Model.ProductProperties.Washer == true)
    {
        propertiesList.Add("Çamaşır Makinesi");
    }
    if (Model.ProductProperties.Gym == true)
    {
        propertiesList.Add("Spor");
    }

}

<h2>Villa Detay Sayfası</h2>

<div>
    <h4>Villa</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (Model.ProductImages.Count > 0)
        {
            <dt>
                @Html.Label("Resimler")
            </dt>
            <dd>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="row ">

                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 m-auto">
                                    <div class="product-img-head">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                                            <div class="product-img">
                                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                                    <div class="carousel-inner">

                                                        <div class="carousel-item active">
                                                         
                                                                <img class="d-block w-100" src="@Model.ProductImages.Last().ImageUrl" alt="First slide">
                                                         
                                                        </div>

                                                        @foreach (var item2 in Model.ProductImages)
                                                        {
                                                            <div class="carousel-item ">
                                                                <img class="d-block w-100" src="@item2.ImageUrl">
                                                            </div>
                                                        }

                                                    </div>
                                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" >
                                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" id="yeni">
                                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                        <span class="sr-only">Next</span>
                                                    </a>

                                                </div>
                                            </div>


                                            @*<img src="~/Areas/ManagementPanel/Content/assets/images/eco-product-img-1.png" alt="" class="img-fluid">*@
                                        </div>
                                        @*<div class=""><a href="#" class="product-wishlist-btn"><i class="fas fa-heart"></i></a></div>*@
                             
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </dd>
        }

        <dt>
            @Html.Label("Başlık")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.Label("AltBaşlık")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubTitle)
        </dd>

        <dt>
            @Html.Label("Açıklama")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.Label("Fiyat")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Metrekare)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Metrekare)
        </dd>

        <dt>
            @Html.Label("Durum")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.Label("Kayıt Tarihi")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

        <dt>
            @Html.Label("Depozito")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deposit)
        </dd>
        <dt>
            @Html.Label("Kategoriler")
        </dt>
        <dd>
            @foreach (var item in Model.Categories)
            {
                <span>@item.Name , </span>
            }
        </dd>

        <dt>
            @Html.Label("Adres")
        </dt>

        <dd>
