            @Html.DisplayFor(model => model.ProductAddresses.Province.Name)
        </dd>
        <dt>
            @Html.Label("İlçe")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductAddresses.District.Name)
        </dd>
        <dt>
            @Html.Label("Şehir")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductAddresses.Towns.Name)
        </dd>

        <dt>
            @Html.Label("Oda Sayısı")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDetails.RoomCount)
        </dd>
        <dt>
            @Html.Label("Banyo Sayısı")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDetails.BathCount)
