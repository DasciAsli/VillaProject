        <dd>
            @Html.DisplayFor(model => model.ProductDetails.BalconyCount)
        </dd>
        <dt>
            @Html.Label("Garaj Sayısı")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDetails.GarageCount)
        </dd>
        <dt>
            @Html.Label("Havuz Sayısı")
        </dt>
