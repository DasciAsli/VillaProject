@model AE_VillaProject_2021.Models.EntityFramework.Terms

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Şart Detay Sayfası</h2>

<div>
    <h4>Şartlar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Başlık</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            <p>Açıklama</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <p>Durum</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <p>Kayıt Tarihi</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.TermsId },new { @class="btn btn-outline-dark" }) |
    @Html.ActionLink("Anasayfa'ya Dön", "Index",null,new { @class = "btn btn-outline-dark" })
</p>
