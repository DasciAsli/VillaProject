@model AE_VillaProject_2021.Models.EntityFramework.Users

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Silme Sayfası</h2>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Ad</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <p>Soyad</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SurName)
        </dd>

        <dt>
            <p>Mail</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <p>Şifre</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            <p>Durum</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <p>Kayıt Tarihi</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

        <dt>
            <p>Rol</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roles.RoleName)
        </dd>
        <dt>
            <p>Cinsiyet</p>
        </dt>
        <dd>
            @if (Model.UserDetails.Gender == true)
            {
                <p>Erkek</p>
            }
            else
            {
                <p>Kadın</p>
            }
        </dd>


        <dt>
            <p>Yaş</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.Age)
        </dd>
        <dt>
            <p>Telefon</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.PhoneNumber)
        </dd>
        <dt>
            <p>Resim</p>
        </dt>

        <dd>
            <img src="@Model.UserDetails.ImageUrl" alt="Alternate Text" />
        </dd>
        <dt>
            <p>Adres</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.Address)
        </dd>
        <dt>
            <p>Tc</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.Tc)
        </dd>
        <dt>
            <p>Pasaport Numarası</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserDetails.PassportNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-outline-dark" /> |
            @Html.ActionLink("Anasayfa'ya Dön", "Index",null,new { @class="btn btn-outline-dark"})
        </div>
    }
</div>
