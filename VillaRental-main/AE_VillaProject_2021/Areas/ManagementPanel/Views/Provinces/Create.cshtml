@model AE_VillaProject_2021.Models.EntityFramework.Province

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Bölge Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Bölge</h4>
    <hr />
    <div class="form-group">

        <div class="col-md-10">
            @Html.Label("İlçe Adı")
            @Html.DropDownList("DistrictId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DistrictId, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    
    <div class="col-md-10">
        @Html.Label("Bölge Adı")
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        
        <div class="col-md-10">
            @Html.Label("Durum")
            <div class="checkbox">
                @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-outline-dark" />
        </div>
    </div>
</div>
}

<div class="col-md-10">
    @Html.ActionLink("Anasayfa'ya Dön", "Index",null,new {@class="btn btn-outline-dark" })
</div>
