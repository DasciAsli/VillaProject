@model AE_VillaProject_2021.Models.EntityFramework.Province

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bölge Silme Sayfası</h2>
<div class="alert alert-danger alert-dismissible">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Herhangi bir bölgeyi sildiğiniz takdirde o bölgedeki tüm villalar silinecektir!</strong>
</div>
<h3>Bu bölgeyi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Bölge</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Ad</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <p>Durum</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            <p>Kayıt Tarihi</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

        <dt>
            <p>İlçe</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.District.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-outline-dark" /> |
            @Html.ActionLink("Anasayfa'ya Dön", "Index",null,new {@class="btn btn-outline-dark" })
        </div>
    }
</div>
