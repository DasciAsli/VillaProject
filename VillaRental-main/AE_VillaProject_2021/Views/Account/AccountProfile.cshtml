@model AE_VillaProject_2021.Models.EntityFramework.Users
@{
    ViewBag.Title = "AccountProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section _Breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

<!--My profile -->
<section class="space-ptb">
    <div class="container">
        <div class="row">
            @Html.Partial("_AccountPartial", Model)
            <div class="col-12">
                <div class="section-title d-flex align-items-center">
                    <h2>Profili güncelle </h2>
                    <span class="ms-auto">@Model.RegisterDate tarihinde katıldı</span>
                </div>
                @using (Html.BeginForm("AccountProfile", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Kullanıcı Adı</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Kullanıcı Soyadı</label>
                            @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Şifre</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Yaş</label>
                            @Html.EditorFor(model => model.UserDetails.Age, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserDetails.Age, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Telefon Numarası</label>
                            @Html.EditorFor(model => model.UserDetails.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserDetails.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Resim</label>
                            <img src="@Model.UserDetails.ImageUrl" alt="Alternate Text" />
                            <input type="file" name="imgFile" value="" />
                            @Html.ValidationMessageFor(model => model.UserDetails.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="mb-2">Adres</label>
                            @Html.TextAreaFor(model => model.UserDetails.Address, 3, 116, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserDetails.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <label class="mb-2">Kimlik Numarası</label>
                            </div>
                            @Html.EditorFor(model => model.UserDetails.Tc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserDetails.Tc, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <label class="mb-2">Pasaport Numarası</label>
                            </div>
                            @Html.EditorFor(model => model.UserDetails.PassportNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserDetails.PassportNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
                        </div>
                    </div>
                }
                <hr class="my-5" />
